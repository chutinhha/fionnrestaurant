@model IEnumerable<RestaurantSoftware.Models.Item>

@{
    ViewBag.Title = "Menu";
}

<center><h2>Menu</h2></center>
<hr />
<div class="col-md-6">
<table>
    @{
        List<ItemType> Categories = ViewBag.ItemTypes;
    }
    @foreach (ItemType itemType in Categories)
    {
        <tr><th colspan="3"><center>@(itemType.itemTypeName)s</center></th></tr>
        <tr style="border-bottom: 1px solid black !important;">
            <th width="250px">
                Name
            </th>
            <th width="80px">
                Price
            </th>
            <th width="70px">
                Options
            </th>
        </tr>
        foreach (Item item in Model)
        {
            if (item.itemType == itemType.itemTypeID)
            {
                <tr><td>@item.itemName</td><td>&euro;@item.itemPrice</td><td>@Html.ActionLink("Edit", "EditItem/" + item.itemID, "Home")</td></tr>
            }
        }
        <tr><td colspan="3"><br /></td></tr>
    }
</table>
    </div>
    <div class="col-md-6">
        @{
            ViewBag.Images = Directory.EnumerateFiles(Server.MapPath("/Content/Images")).Select(fn => "/Content/Images/" + Path.GetFileName(fn));
            int count = 0;
            foreach (string file in ViewBag.Images)
            {
                if (file == "/Content/Images/NoImage.jpg")
                {
                }
                else
                {
                    <div class="col-custom-4" style="background-color:transparent; border-radius:5%;"><center><img src="@file" class="itemSelect" style="border-radius: 50%; background-color: white; border-style: solid; border-width: 2px; border-color: black;" /></center></div>
                }
                count++;
            }
        }
    </div>