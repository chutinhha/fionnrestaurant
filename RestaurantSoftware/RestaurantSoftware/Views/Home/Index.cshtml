@model List<RestaurantSoftware.Models.Order>

@{
    ViewBag.Title = "Fionn's Restaurant Management Software";
    HttpCookie aCookie = Request.Cookies["UserSettings"];
    bool showTables = false;
    if (aCookie == default(HttpCookie))
    {
        showTables = false;
    }
    else
    {
        if (aCookie["Role"] == "Staff")
        {
            showTables = true;
        }
        else if (aCookie["Role"] == "Customer")
        {
            showTables = false;
        }
    }
}

<div class="jumbotron">
    <h1>Fionn's Imaginary Restaurant</h1>
</div>

<div class="row">
    <center><font color="red">@ViewBag.ErrorMessage</font></center>
    @{
        if (showTables)
        {
            <div class="col-md-12">
                <h2>Open Tables</h2>
                @if (Model.Count == 0)
                {
                    <p>No open tables currently!</p>
                }
                else
                {
                    <table>
                        <tr><th width="100px">Order ID</th><th width="200px">Order Time</th><th width="125px">Staff Member</th><th width="150px">Options</th></tr>
                        @foreach (Order order in Model)
                        {
                            <tr><td>@order.orderID</td><td>@order.orderStartDate.ToString("dd/MM/yy HH:mm")</td><td>
                            @foreach (Staff staffMember in ViewBag.Staff)
                            {
                                if (staffMember.staffID == order.staffID)
                                {
                                    @staffMember.staffName;
                                }
                            }    
                            </td><td>@Html.ActionLink("Close", "CloseTable/" + @order.orderID, "Home") | @Html.ActionLink("Manage", "ManageTable/" + @order.orderID, "Home")</td></tr>
                        }
                    </table>
                }
            </div>
        }
        else
        {
            <div class="col-md-12">
                <h2>Hola amigo!</h2>
            </div>
        }
    }
</div>