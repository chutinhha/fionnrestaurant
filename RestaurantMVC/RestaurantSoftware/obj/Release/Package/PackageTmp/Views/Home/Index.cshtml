@model List<RestaurantSoftware.Models.Order>

@{
    ViewBag.Title = "Fionn's Restaurant Management Software";
    HttpCookie aCookie = Request.Cookies["UserSettings"];
    bool showTables = false;
    if (aCookie == default(HttpCookie))
    {
        showTables = false;
    }
    else
    {
        if (aCookie["Role"] == "Staff" || aCookie["Role"] == "SystemAdmin")
        {
            showTables = true;
        }
        else if (aCookie["Role"] == "Customer")
        {
            showTables = false;
        }
    }
}

<div class="jumbotron">
    <h1>Restaurant 42</h1>
</div>

<div class="row">
    <center><font color="red">@ViewBag.ErrorMessage</font></center>
    @{
        if (showTables)
        {
            <div class="col-md-12">
                <h2>Open Tables</h2>
                @if (Model.Count == 0)
                {
                    <p>No open tables currently!</p>
                }
                else
                {
                    <table>
                        <tr><th width="100px">Order ID</th><th width="125px">Order Time</th><th width="125px">Staff Member</th><th width="250px">Customer</th><th width="150px">Options</th></tr>
                        @foreach (Order order in Model)
                        {
                            if (order.staffID == Int32.Parse(aCookie["ID"]) || aCookie["Role"] == "SystemAdmin")
                            {
                                <tr><td>@order.orderID</td><td>@order.orderStartDate.ToString("dd/MM/yy HH:mm")</td><td>
                                @foreach (Staff staffMember in ViewBag.Staff)
                                {
                                    if (staffMember.staffID == order.staffID)
                                    {
                                        @staffMember.staffName;
                                    }
                                }    
                                </td><td>@if(order.customerID == null){<text>Not Assigned</text>}else{foreach(Customer customer in ViewBag.Customers){if(Int32.Parse(order.customerID)==customer.customerID){<text>@customer.customerEmail (@customer.customerID)</text>}}}</td><td>@Html.ActionLink("Manage", "ManageTable/" + @order.orderID, "Home")</td></tr>
                            }
                        }
                    </table>
                }
            </div>
        }
        else
        {
            <div class="col-md-12 index">
                <h2>Welcome to Fionn's Imaginary Restaurant</h2>
                We pride ourselves on using the freshest ingredients from local suppliers. We offer food from a variety of different cultures, all cooked with love and care by our resident imaginary chef, Mr. F. Ake.
                <br />
                <br />
                To avail of the best possible value at Fionn's Imaginary Restaurant, make sure to create a customer account, so you can earn loyalty points for money off meals and drinks.
            </div>
        }
    }
</div>